@page "/house/{HouseId:int}"

<div id="HousePage">
    @if (!_userLists.Any())
    {
       <p>No created lists</p>
    }

    @foreach (var list in _userLists)
    {
        <Card>
            <CardHeader>@list.Name</CardHeader>
            <CardBody>
                @list.Owner
            </CardBody>
         </Card>
    }
</div>

<CascadingValue Value="HouseId">
    <BottomNav GoBackUrl="/homepage" CenterModalParameters="_centerModalParameters" />
</CascadingValue>
